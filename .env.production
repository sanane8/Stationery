# Production Environment Variables
# Stationery Management System - Tanzania

# Security
DJANGO_SECRET_KEY=your-very-long-secret-key-change-this-in-production-please-use-something-secure
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.100,0.0.0.0

# Database Configuration
DB_NAME=stationery_db
DB_USER=stationery_user
DB_PASSWORD=change-this-secure-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@stationery.co.tz

# SMS Configuration (Tanzania Providers)
AFRICASTALKING_USERNAME=your-africastalking-username
AFRICASTALKING_API_KEY=your-africastalking-api-key
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token

# M-Pesa Configuration
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_SHORTCODE=your-mpesa-shortcode
MPESA_PASSKEY=your-mpesa-passkey

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
CLOUD_BACKUP_ENABLED=True
CLOUD_PROVIDER=google_drive

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/gunicorn/django.log

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Performance
CACHE_ENABLED=True
CACHE_REDIS_URL=redis://localhost:6379/1

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
