{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "BUILDPACK",
    "buildpacks": [
      "heroku/python"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "gunicorn stationery_tracker.wsgi --bind 0.0.0.0:$PORT",
    "restartPolicyMaxRetries": 5
  },
  "plugins": {
    "postgresql": {
      "version": "15"
    }
  }
}
